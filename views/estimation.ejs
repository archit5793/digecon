<script>
  var Estimation = {
    getEstimation: function () {
      var value = document.getElementById('get_est').value;
      aja()
        .method('get')
        .url('/getestimation')
        .data({future: value})
        .on('200', function (response) {
          var ele= document.getElementById('est');
          var ele1 = document.createElement('h3');
          ele1.innerHTML = 'Prediction by Linear Regression is '+response.res1+'. Prediction by Mean analysis is '+response.re2;
          ele.appendChild(ele1);

        })
        .go();
    }
  };
</script>


